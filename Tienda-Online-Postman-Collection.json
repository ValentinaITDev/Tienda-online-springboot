{
	"info": {
		"_postman_id": "tienda-online-springboot",
		"name": "Tienda Online Spring Boot",
		"description": "Colección de endpoints para la API de Tienda Online",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"jwt_token\", jsonData.token);",
									"    pm.environment.set(\"user_id\", jsonData.idUsuario);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"correoElectronico\": \"juan.perez@email.com\",\n  \"contrasena\": \"Qwerty123\"\n}"
						},
						"url": {
							"raw": "http://localhost:8080/auth/login",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"auth",
								"login"
							]
						},
						"description": "Endpoint para autenticación de usuarios. Retorna un JWT token."
					},
					"response": []
				}
			]
		},
		{
			"name": "Productos",
			"item": [
				{
					"name": "Productos con Bajo Stock",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/productos/bajo-stock?x=15",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"productos",
								"bajo-stock"
							],
							"query": [
								{
									"key": "x",
									"value": "15",
									"description": "Cantidad máxima de stock"
								}
							]
						},
						"description": "Obtiene productos con stock menor al valor especificado. Endpoint público."
					},
					"response": []
				}
			]
		},
		{
			"name": "Comentarios",
			"item": [
				{
					"name": "Comentarios desde Fecha",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/comentarios/desde?fecha=2025-05-10",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"comentarios",
								"desde"
							],
							"query": [
								{
									"key": "fecha",
									"value": "2025-05-10",
									"description": "Fecha en formato YYYY-MM-DD"
								}
							]
						},
						"description": "Obtiene comentarios desde una fecha específica. Endpoint público."
					},
					"response": []
				}
			]
		},
		{
			"name": "Carrito",
			"item": [
				{
					"name": "Crear Carrito",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"carrito_id\", jsonData.idCarrito);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:8080/carrito",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"carrito"
							]
						},
						"description": "Crea un nuevo carrito para el usuario autenticado. Requiere JWT."
					},
					"response": []
				},
				{
					"name": "Agregar Producto al Carrito",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:8080/carrito/{{carrito_id}}/agregar-producto/1",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"carrito",
								"{{carrito_id}}",
								"agregar-producto",
								"1"
							]
						},
						"description": "Agrega un producto al carrito. Descuenta stock y calcula impuestos automáticamente. Requiere JWT."
					},
					"response": []
				},
				{
					"name": "Obtener Productos del Carrito",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:8080/carrito/{{carrito_id}}/productos",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"carrito",
								"{{carrito_id}}",
								"productos"
							]
						},
						"description": "Obtiene la lista de productos en el carrito. Requiere JWT."
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080"
		}
	]
}
